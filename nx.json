{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "master",
  "nxCloudAccessToken": "MjBkMzhlOWItNmJjNS00MmIyLTllMzUtNTVhZTA2NzYxMTU0fHJlYWQtd3JpdGU=",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    }
  },
  "release": {
    "projects": [
      "@element-plus-ui/pro-button",
      "!@element-plus-ui/pro-utils",
      "!@element-plus-ui/pro-hooks",
      "!@element-plus-ui/pro-types"
    ],
    "version": {
      //"conventionalCommits": true, //根据commit记录发布新版本，没有记录不发布
      "generatorOptions": {
        "currentVersionResolver": "git-tag",
        "specifierSource": "conventional-commits"
      }
    },
    "changelog": {
      "projectChangelogs": {
        "createRelease": "github",
        "renderOptions": {
          "authors": true,
          "mapAuthorsToGitHubUsernames": true,
          "commitReferences": true,
          "versionTitleDate": true
        }
      },
      "workspaceChangelog": {
        "renderOptions": {
          "commitReferences": true,
          "versionTitleDate": true
        }
      }
    }
  }
}
