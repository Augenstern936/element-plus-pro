{
	"name": "element-plus-pro",
	"private": true,
	"license": "ISC",
	"packageManager": "pnpm@8.10.2",
	"workspaces": [
		"packages/*",
		"play",
		"docs"
	],
	"scripts": {
		"dev": "pnpm -C play dev",
		"docs:dev": "pnpm run -C docs dev",
		"gen:version": "tsx scripts/gen-version.ts",
		"update:version": "tsx scripts/update-version.ts",
		"clean": "pnpm run clean:dist && pnpm run -r --parallel clean",
		"clean:dist": "rimraf dist",
		"build": "pnpm --filter \"@element-plus/**\" build",
		"lint": "eslint --cache --ext .vue,.js,.jsx,.ts,.tsx  --fix --format=pretty ./ && npm run tsc",
		"lint:fix": "pnpm run lint --fix"
	},
	"dependencies": {
		"@vue/shared": "^3.3.8"
	},
	"devDependencies": {
		"@element-plus/icons-vue": "^2.3.1",
		"@element-plus/pro-types": "workspace:^",
		"@element-plus/pro-utils": "workspace:^",
		"@esbuild-kit/cjs-loader": "^2.4.4",
		"@farmfe/cli": "^1.0.2",
		"@farmfe/core": "^1.1.10",
		"@farmfe/js-plugin-dts": "^0.5.2",
		"@pnpm/find-workspace-packages": "^6.0.9",
		"@pnpm/types": "^10.0.0",
		"@rollup/plugin-typescript": "^11.1.6",
		"@types/gulp": "^4.0.17",
		"@types/node": "^20.8.9",
		"@vitejs/plugin-vue": "^4.4.0",
		"@vitejs/plugin-vue-jsx": "^3.0.2",
		"cross-env": "^7.0.3",
		"element-plus": "^2.4.1",
		"eslint": "^9.3.0",
		"fs-extra": "^11.1.1",
		"glob": "^10.3.12",
		"gulp": "^4.0.2",
		"gulp-clean": "^0.4.0",
		"husky": "^9.0.11",
		"prettier-plugin-organize-imports": "^3.2.4",
		"prettier-plugin-packagejson": "^2.5.0",
		"pretty-quick": "^4.0.0",
		"rimraf": "^5.0.5",
		"rollup-plugin-esbuild": "^6.1.1",
		"rollup-plugin-visualizer": "^5.11.0",
		"sass": "^1.69.5",
		"tsup": "^8.0.2",
		"tsx": "^3.14.0",
		"typescript": "^5.2.2",
		"vite": "^4.5.0",
		"vite-plugin-css-injected-by-js": "^3.5.1",
		"vue": "^3.3.7",
		"vue-draggable-plus": "^0.3.5",
		"vue3-styled-components": "^1.2.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged && npm run lint && npm test"
		}
	}
}
